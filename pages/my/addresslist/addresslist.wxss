.address {
  
}

.address .item_list {
  
  background: #f6f6f6;
  padding-bottom: 60rpx;
}

.address .item_list .item {
  background: #fff;
  margin-bottom: 30rpx;
}

.address .item_list .item .item_t {
  padding: 15rpx 30rpx;
  line-height: 40rpx;
}

.address .item_list .item .item_t .tel {
  float: right;
}

.address .item_list .item .item_t .addr {
  font-size: 22rpx;
}

.address .item_list .item .item_b {
  border-top: 1px solid #f0f0f0;
  padding: 14rpx 30rpx;
  text-align: right;
}

.address .item_list .item .item_b .s_check {
  float: left;
}

.address .item_list .item .item_b button {
  width: 120rpx;
  line-height: 55rpx;
  height: 55rpx;
  border: 1px solid #222;
  border-radius: 10rpx;
}

.address  .add {
  color: #fff;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #ee1529;
  font-size: 28rpx;
  position: fixed;
  bottom: 0;
}
