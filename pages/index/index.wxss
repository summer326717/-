.index .slide-image {
    width: 100%;
    height: 100%;
}

.index .loadmore .menu {
    display: flex;
    padding: 30rpx;
    border-bottom: 20rpx solid #e8e8e8;
}

.index .loadmore .menu .li {
    flex: 1;
    text-align: center;
}

.index .loadmore .menu .li image {
    width: 48rpx;
    height: 50rpx;
}

.index .list .item {
    border-bottom: 20rpx solid #e8e8e8;
}

.index .list .bottom {
    line-height: 35rpx;
    padding: 25rpx 30rpx;
}

.index .list .bottom .money {
    font-size: 24rpx;
    position: relative;
    padding-top: 25rpx;
}

.index .list .bottom .money .gray {
    color: #9b9b9b;
    margin-left: 20rpx;
    text-decoration: line-through;
}

.index .list .bottom .money .m_right {
    position: absolute;
    right: 30rpx;
    top: 25rpx;
}

.index .list .bottom .to_group {
    color: #ee1529;
    padding: 10rpx 20rpx;
    border-radius: 10rpx;
    margin-left: 15rpx;
    border: 1px solid #ee1529;
}

.index .list .img image {
    width: 100%;
    height: 300rpx;
}