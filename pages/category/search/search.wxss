.search .top {
    border-bottom: 1px solid #eeeeee;
    overflow: hidden;
    padding: 14rpx 0;
}

.search .top .s_ipt {
    width: 60%;
    padding: 10rpx 0;
    padding-left: 10%;
    margin-left: 10%;
    line-height: 40rpx;
    border-radius: 60rpx;
    background: #eeeeee;
    float: left;
}

.search .top .icon {
    position: absolute;
    top: 36rpx;
    left: 15%;
    width: 30rpx;
    height: 30rpx;
    background: url("http://192.168.18.148/images/c_02.png") no-repeat;
    background-size: 30rpx 30rpx;
}

.search .top .s_btn {
    color: #ffffff;
    background-color: #ee1529;
    padding: 0 25rpx;
    border-radius: 10rpx;
    margin-left: 20rpx;
    float: left;
}

.search .his,
.search .hot {
    padding: 0 30rpx;
}

.search .his .tit,
.search .hot .tit {
    padding: 25rpx 0;
    padding-left: 30rpx;
}

.search .his .s_span,
.search .hot .s_span {
    color: #808080;
    font-size: 22rpx;
}

.search .his .s_span span,
.search .hot .s_span span {
    display: inline-block;
    border: 1px solid #f0f0f0;
    border-radius: 10rpx;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
    padding: 4rpx 15rpx;
}

.search .his .tit {
    background: url("http://192.168.18.148/images/s_01.png") no-repeat 0 50%;
    background-size: 24rpx 24rpx;
}

.search .his .del {
    float: right;
    width: 24rpx;
    height: 25rpx;
    background: url("http://192.168.18.148/images/s_02.png") no-repeat 50% 50%;
    background-size: 24rpx 25rpx;
}

.search .hot .tit {
    background: url("http://192.168.18.148/images/s_03.png") no-repeat 0 50%;
    background-size: 24rpx 24rpx;
}

.search .hot .cha {
    color: #ee1529;
    float: right;
    padding-left: 25rpx;
    background: url("http://192.168.18.148/images/s_04.png") no-repeat 0 50%;
    background-size: 19rpx 19rpx;
}