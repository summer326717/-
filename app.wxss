/**app.wxss**/

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
}

page {
    height: 100%;
}

page,
button {
    padding: 0;
    font-size: 28rpx;
    color: #222222;
}

button {
    display: inline-block;
    border-radius: 0;
}

button::after {
    border: none;
}

.hide {
    display: none;
}

.dialogbg {
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 100;
}

.red {
    color: #EE1529;
}

.fr {
    float: right;
}

.tr {
    text-align: right;
}

.tc {
    text-align: center;
}

.tr {
    text-align: right;
}


/*超过两行...代替*/

.elli {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}


/*超过一行...代替*/

.ell {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}


/*暂无数据*/

.no_data {
    text-align: center;
}

.no_data image {
    padding-top: 200rpx;
    width: 233rpx;
    height: 298rpx;
}


/*================================================================================================选择数量*/

.buy_num {
    font-size: 0;
    float: right;
}

.buy_num .jian,
.buy_num .add {
    font-size: 28rpx;
    width: 90rpx;
    height: 70rpx;
    border: 1px solid #f0f0f0;
}

.buy_num .num {
    font-size: 28rpx;
    width: 115rpx;
    height: 70rpx;
    box-sizing: border-box;
    text-align: center;
    background: #f8f8f8;
    border-top: 1px solid #f0f0f0;
    border-bottom: 1px solid #f0f0f0;
}


/*=========================================================================================================选择商品规格*/

.buy_selected {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background: #F8F8F8;
    z-index: 100;
}

.buy_selected .se_top {
    line-height: 40rpx;
    padding: 30rpx;
    position: relative;
}

.buy_selected .se_top image {
    float: left;
    height: 180rpx;
    width: 180rpx;
    border-radius: 10rpx;
    background: #fff;
    margin-top: -50rpx;
    margin-right: 30rpx;
    border: 1px solid #eaeaea;
}

.buy_selected .se_top .price {
    color: #ee1529;
    font-size: 28rpx;
}

.buy_selected .se_top .num {
    font-size: 22rpx;
}

.buy_selected .se_top .close {
    position: absolute;
    top: 20rpx;
    right: 30rpx;
    width: 28rpx;
    height: 28rpx;
    background: url("http://192.168.18.148/images/g_06.png") no-repeat;
    background-size: 100% 100%;
}

.buy_selected .se_middle {
    padding: 0 30rpx 40rpx 30rpx;
}

.buy_selected .se_middle .item_tit {
    padding: 20rpx 0;
    font-size: 28rpx;
}

.buy_selected .se_middle .item {
    padding-left: 50rpx;
}

.buy_selected .se_middle .item span {
    font-size: 20rpx;
    display: inline-block;
    padding: 20rpx 15rpx;
    border-radius: 10rpx;
    border: 1px solid #a1a6bb;
    margin-right: 20rpx;
    margin-bottom: 15rpx;
}

.buy_selected .se_middle .item .active {
    color: #fff;
    background: #ee1529;
    border: 1px solid #ee1529;
}

.buy_selected .se_middle .buy_num {
    font-size: 0;
    float: right;
}

.buy_selected .se_middle .buy_num .jian,
.buy_selected .se_middle .buy_num .add {
    font-size: 28rpx;
    width: 90rpx;
    height: 70rpx;
    border: 1px solid #f0f0f0;
}

.buy_selected .se_middle .buy_num .num {
    font-size: 28rpx;
    width: 115rpx;
    height: 70rpx;
    box-sizing: border-box;
    text-align: center;
    background: #f8f8f8;
    border-top: 1px solid #f0f0f0;
    border-bottom: 1px solid #f0f0f0;
}

.buy_selected .se_middle .submit {
    width: 100%;
    margin-top: 60rpx;
    font-size: 28rpx;
    line-height: 90rpx;
    color: #fff;
    background: #ee1529;
    border-radius: 10rpx;
}


/*============================================================================团购订单、我的订单*/

.group {
    height: 100%;
    background: #f6f6f6;
}

.group .menu {
    display: flex;
    background: #fff;
    border-bottom: 1px solid #e8e8e8;
}

.group .menu .li {
    color: #808080;
    flex: 1;
    text-align: center;
    float: left;
    line-height: 88rpx;
}

.group .menu .active {
    color: #ee1529;
}

.group .item_list .item {
    border-top: 30rpx solid #f6f6f6;
    background: #fff;
}

.group .item_list .item .status {
    color: #ee1529;
    text-align: right;
    padding: 15rpx 30rpx 15rpx 0;
}

.group .item_list .item .goods {
    color: #222;
    display: flex;
    padding: 10rpx 30rpx;
    background: #f6f6f6;
}

.group .item_list .item .goods .left {
    width: 165rpx;
    height: 165rpx;
    border: 1px solid #eaeaea;
}

.group .item_list .item .goods .right {
    padding-left: 30rpx;
    position: relative;
    flex: 1;
}

.group .item_list .item .goods .right .name {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    margin-bottom: 15rpx;
    line-height: 35rpx;
}

.group .item_list .item .goods .right .mb60 {
    margin-bottom: 40rpx;
}

.group .item_list .item .goods .right .price {
    font-size: 22rpx;
    color: #808080;
}

.group .item_list .item .goods .right .fail {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    display: inline-block;
    background: url("http://192.168.18.148/images/o_01.png") #fff;
    background-size: 100% 100%;
    position: absolute;
    right: 0;
    top: -20rpx;
}

.group .item_list .item .num {
    color: #808080;
    text-align: right;
    line-height: 63rpx;
    border-bottom: 1px solid #f0f0f0;
}

.group .item_list .item .num span {
    margin-right: 30rpx;
}

.group .item_list .btn {
    text-align: right;
    padding: 14rpx 30rpx;
}

.group .item_list .btn .cancel,
.group .item_list .btn .sure {
    width: 120rpx;
    height: 60rpx;
    display: inline-block;
    font-size: 28rpx;
    border-radius: 10rpx;
}

.group .item_list .btn .cancel {
    color: #808080;
    border: 1px solid #808080;
}

.group .item_list .btn .sure {
    color: #ee1529;
    border: 1px solid #ee1529;
}